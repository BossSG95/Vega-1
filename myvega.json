{
	"$schema": "https://vega.github.io/schema/vega-lite/v4.json",
	"data": {
		"url": "https://raw.githubusercontent.com/Maplub/AirQualityData/master/PM10_2018_daily.csv"
	},
	"title": "PM10 Annual Weather Heat Map",
	"transform": [{
		"filter": {
			"field": "pm10",
			"range": [0, 180]
		}
	}],
	"selection": {
		"pts": {
			"type": "single"
		}
	},
	"config": {
		"view": {
			"strokeWidth": 0,
			"step": 13
		},
		"axis": {
			"domain": false
		}
	},
	"mark": "rect",
	"encoding": {
		"x": {
			"field": "date",
			"timeUnit": "date",
			"type": "ordinal",
			"title": "Day",
			"axis": {
				"labelAngle": 0,
				"format": "%e"
			}
		},
		"y": {
			"field": "date",
			"timeUnit": "month",
			"type": "ordinal",
			"title": "Month"
		},
		"color": {
			"field": "temp",
			"aggregate": "max",
			"type": "quantitative",
			"legend": {
				"title": null
			},
			"tooltip": [{
					"field": "id 2",
					"type": "nominal"
				},
				{
					"field": "pm10",
					"type": "quantitative"
				}
			]
		}
	}
}
