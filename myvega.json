{

  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",

  "data": {"url": "https://raw.githubusercontent.com/Maplub/AirQualityData/master/PM10_2018_daily.csv"
  },
  "title": "2018 Daily Air Quility (PM10)",
    "config": {
      "view": {
          "strokeWidth": 0,
          "step": 20
      },
      "axis": {
          "domain": false
      }
    },
  "mark": "rect",
  "encoding": {
      "x": {
          "title": "Day",
          "timeUnit": "date",
          "field": "time",
          "type": "ordinal",
          "axis": {
              "labelAngle": 0,
              "format": "%e"
          }
    },
      "y": {
          "title": "Month",
          "timeUnit": "month",
          "field": "time",
          "type": "ordinal"
    },
      "color": {
          "field": "pm10",
          "aggregate": "mean",
          "type": "quantitative",
          "legend": {
              "title": null}
        }
    }
  }
